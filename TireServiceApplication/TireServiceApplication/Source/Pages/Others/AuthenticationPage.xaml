<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TireServiceApplication.Source.Pages.Others.AuthenticationPage">
    
    <ScrollView VerticalScrollBarVisibility="Never">
    <StackLayout VerticalOptions="Center" Spacing="10" Margin="20">
        <Label Text="Авторизация" HorizontalOptions="Center" VerticalOptions="Center" FontSize="32" FontAttributes="Bold" TextColor="#512BD4" Margin="10,30,10,30"/>
        
        <StackLayout Orientation="Horizontal">
            <Label Text="Логин: " FontSize="18"  VerticalOptions="Center"/>
            <Entry x:Name="LoginEntry" Placeholder="Введите логин" FontSize="18"  VerticalOptions="Center"/>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal">
            <Label Text="Пароль: " FontSize="18" VerticalOptions="Center"/>
            <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" FontSize="18"  VerticalOptions="Center"/>
        </StackLayout>
        
        <Button Text="Войти"
                FontSize="16"
                HeightRequest="45"
                HorizontalOptions="FillAndExpand"
                Clicked="AuthenticationButtonOnClicked"/>
    </StackLayout>
    </ScrollView>
</ContentPage>