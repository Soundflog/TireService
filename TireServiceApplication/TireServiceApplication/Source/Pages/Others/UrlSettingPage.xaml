<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TireServiceApplication.Source.Pages.Others.UrlSettingPage"
             Title="Настройки URL">
             <ScrollView VerticalScrollBarVisibility="Never">
    <StackLayout Margin="10" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Введите URL сервера" FontSize="18" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
        <Entry x:Name="UrlEntry" Placeholder="https://artseabox.ru/api/" FontSize="18" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
        
        <Button Text="Сохранить" Clicked="Button_OnClicked" 
                HeightRequest="45"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center" />
    </StackLayout>
    </ScrollView>
</ContentPage>